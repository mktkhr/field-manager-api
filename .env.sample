# =============================================================================
# Application
# =============================================================================
# 実行環境(development | production)
ENVIRONMENT=development
# ログレベル(DEBUG | INFO | WARN | ERROR)
LOG_LEVEL=INFO

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=field_manager_db
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=5m
DB_SSL_MODE=disable

# =============================================================================
# Cache (Redis/Valkey)
# =============================================================================
CACHE_HOST=localhost
CACHE_PORT=6379
CACHE_PASSWORD=valkey
CACHE_DATABASE=0
CACHE_MAX_RETRIES=3
CACHE_CONNECT_TIMEOUT=5s
CACHE_READ_TIMEOUT=5s
CACHE_WRITE_TIMEOUT=5s
CACHE_POOL_SIZE=10
CACHE_MIN_IDLE_CONNS=5
CACHE_TLS_ENABLED=false

# =============================================================================
# Storage (S3/RustFS/MinIO)
# =============================================================================
# S3を有効にするか(true: AWS S3、false: RustFS/MinIO)
STORAGE_S3_ENABLED=false

# RustFS/MinIO用エンドポイント
# STORAGE_S3_ENABLED=trueの場合は無視されます
# ローカル開発: http://localhost:9000
STORAGE_ENDPOINT=http://localhost:9000

STORAGE_REGION=ap-northeast-1
STORAGE_BUCKET=field-manager

# RustFS/MinIO用のKey
# 本番はIAMで管理するので、STORAGE_S3_ENABLE=trueの場合は無視されます
STORAGE_ACCESS_KEY_ID=rustfsadmin
STORAGE_SECRET_ACCESS_KEY=rustfsadmin

# 共通のPre-signed URLの有効期限
STORAGE_PRESIGNED_URL_EXPIRY=900s
